---

- hosts: all
  become: true
  pre_tasks:

  - name: update repoistory index (Ubuntu)
    tags: always
    apt:
      upgrade: dist
      update_cache: yes 
    when: ansible_distribution == "Ubuntu"

  - name: install updates (Centos)
    tags: always
    apt:
      update_cache: yes
      changed_when: false
    when: ansible_distribution == "Centos"

- hosts: all
  become: true

- hosts: workstations
  become: true
 
